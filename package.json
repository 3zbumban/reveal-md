{
  "name": "reveal-md",
  "description": "reveal.js on steroids! Get beautiful reveal.js presentations from your Markdown files.",
  "keywords": [
    "markdown",
    "reveal",
    "revealjs",
    "html",
    "server",
    "cli"
  ],
  "version": "2.1.1",
  "repository": {
    "type": "git",
    "url": "git://github.com/webpro/reveal-md.git"
  },
  "license": "MIT",
  "bin": {
    "reveal-md": "bin/cli.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "test": "mocha",
    "format": "prettier --write lib/**/*.js bin/*.js test/*.js *.md"
  },
  "dependencies": {
    "bluebird": "3.5.1",
    "commander": "2.17.1",
    "express": "4.16.3",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "got": "8.3.2",
    "highlight.js": "9.12.0",
    "image-data-uri": "1.1.1",
    "livereload": "0.7.0",
    "lodash": "4.17.10",
    "mustache": "2.3.1",
    "opn": "5.3.0",
    "reveal.js": "3.7.0",
    "serve-favicon": "2.5.0",
    "yaml-front-matter": "4.0.0"
  },
  "optionalDependencies": {
    "puppeteer": "1.3.0"
  },
  "devDependencies": {
    "debug": "3.1.0",
    "expect": "23.5.0",
    "mocha": "5.2.0",
    "prettier": "1.14.2"
  },
  "engines": {
    "node": ">=6"
  }
}
